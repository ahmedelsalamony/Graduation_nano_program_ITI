<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">-
        <shape android:shape="rectangle">
            <corners android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />/>
            <solid android:color="@color/primary"
                ></solid>
            <stroke android:width="2dp" android:color="@color/primary"></stroke>
            <gradient
                android:centerColor="@color/WhiteSmoke"
                android:endColor="@color/WhiteSmoke"
                android:startColor="@color/WhiteSmoke" />
        </shape>
    </item>
    <item android:state_focused="true">-
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/primary"
                ></solid>
            <stroke android:width="1dp" android:color="@color/primary"></stroke>
            <gradient android:centerColor="@color/primary"
                android:endColor="@color/primary"
                android:startColor="@color/primary" />
        </shape>
    </item>
</selector>