<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">-
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <solid android:color="#0186b3"
                ></solid>
            <stroke android:width="1dp" android:color="#0186b3"></stroke>
            <gradient
                android:centerColor="@color/accent"
                android:endColor="@color/accent"
                android:startColor="@color/accent" />
        </shape>
    </item>
    <item android:state_focused="true">-
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/accent"
                ></solid>
            <stroke android:width="1dp" android:color="@color/accent"></stroke>
            <gradient android:centerColor="@color/accent"
                android:endColor="@color/accent"
                android:startColor="@color/accent" />
        </shape>
    </item>
</selector>