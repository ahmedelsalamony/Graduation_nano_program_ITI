<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">-
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/accent_dark"
                ></solid>
            <stroke android:width="1.5dp" android:color="@color/accent_dark"></stroke>
            <gradient
                android:centerColor="@color/accent_dark"
                android:endColor="@color/accent_dark"
                android:startColor="@color/accent_dark" />
        </shape>
    </item>
    <item android:state_focused="true">-
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/accent_dark"
                ></solid>
            <stroke android:width="1dp" android:color="@color/accent_dark"></stroke>
            <gradient android:centerColor="@color/accent_dark"
                android:endColor="@color/accent_dark"
                android:startColor="@color/accent_dark" />
        </shape>
    </item>
</selector>