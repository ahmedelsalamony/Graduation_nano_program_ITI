<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.community.EditRestaurantProfile"
    android:weightSum="8"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/xUserName"
            android:ems="10"
            android:id="@+id/xUserName"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textColor="@color/WhiteSmoke"
            android:textColorHint="@color/WhiteSmoke"

            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/xPassword"
            android:ems="10"
            android:textColor="@color/WhiteSmoke"
            android:textColorHint="@color/WhiteSmoke"
            android:id="@+id/xPassword"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/xEmail"
        android:ems="10"
        android:textColor="@color/WhiteSmoke"
        android:textColorHint="@color/WhiteSmoke"
        android:id="@+id/xEmail"
        android:layout_weight="1"
        android:layout_margin="5dp"/>
</android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="@string/xPhone"
            android:ems="10"
            android:textColor="@color/WhiteSmoke"
            android:textColorHint="@color/WhiteSmoke"
            android:id="@+id/xPhone"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:hint="@string/xAddress"
            android:ems="10"
            android:textColor="@color/WhiteSmoke"
            android:textColorHint="@color/WhiteSmoke"
            android:id="@+id/xAddress"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/xEditRestaurantFinish"
            android:textColor="@color/WhiteSmoke"
            android:id="@+id/xEditRestaurantFinish"
            android:background="@drawable/txtstyle"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/xCancelEditRestaurant"
            android:textColor="@color/WhiteSmoke"
            android:id="@+id/xCancelEditRestaurant"
            android:background="@drawable/txtstyle"
            android:textAllCaps="false"
            android:layout_margin="5dp"/>
    </LinearLayout>


</LinearLayout>
