<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:textColor="@color/AliceBlue"
    android:background="@color/AliceBlue"
    android:gravity="center"
    tools:context="com.example.safiermool.memberprofile.MainActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/xCardView_Member"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/imageView_member"
          android:layout_gravity="center_vertical"
          android:src="@drawable/galy"
          android:layout_width="100dp"
          android:layout_height="100dp" />


        <TextView
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:id="@+id/xNoTasksSent_tv"
            android:text="No Tasks Sent."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal" />
    </android.support.v7.widget.CardView>


</LinearLayout>

