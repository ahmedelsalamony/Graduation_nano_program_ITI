<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    >

    <android.support.design.widget.TextInputLayout
        android:id="@+id/xinput_layout_foodQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/xFoodQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter food quantity"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/xinput_layout_estimatedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/xEstimatedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter estimated time "
            />

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send request "
        android:textAllCaps="false"
        android:background="@drawable/txtstyle"
        android:layout_margin="4dp"
        android:id="@+id/xbtnConfirmSend"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel request "
        android:textAllCaps="false"
        android:background="@drawable/txtstyle"
        android:layout_margin="4dp"
        android:id="@+id/xCancel"
        />
    </LinearLayout>

</LinearLayout>