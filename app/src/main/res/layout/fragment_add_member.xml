<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_member_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textColor="@color/colorPrimary"
    tools:context="com.example.itimobiletrack.graduation_nano_program_iti.Registeration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/username_white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:mtf_cardCollapsedHeight="4dp"
                app:mtf_animationDuration="1000"
                app:mtf_openKeyboardOnFocus="true"
                android:layout_marginBottom="4dp"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_backgroundColor="@color/colorPrimary"
                >

                <EditText
                    android:id="@+id/xUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:textColor="@color/WhiteSmoke"
                    android:maxLength="20"/>
</com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/password_white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:mtf_cardCollapsedHeight="4dp"
                app:mtf_animationDuration="1000"
                app:mtf_openKeyboardOnFocus="true"
                android:layout_marginBottom="4dp"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_backgroundColor="@color/colorPrimary"
                >

                <EditText
                    android:id="@+id/xPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/accent"
                    android:textColor="@color/WhiteSmoke"
                    android:maxLength="20"
                    />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/password_white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:mtf_cardCollapsedHeight="4dp"
                app:mtf_animationDuration="1000"
                app:mtf_openKeyboardOnFocus="true"
                android:layout_marginBottom="4dp"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_backgroundColor="@color/colorPrimary"
                >

                <EditText
                    android:id="@+id/xConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="confirm password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/accent"
                    android:textColor="@color/WhiteSmoke"
                    android:maxLength="20"
                    />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/email_white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:mtf_cardCollapsedHeight="4dp"
                app:mtf_animationDuration="1000"
                app:mtf_openKeyboardOnFocus="true"
                android:layout_marginBottom="4dp"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_backgroundColor="@color/colorPrimary"
                >

                <EditText
                    android:id="@+id/xEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/accent"
                    android:textColor="@color/WhiteSmoke"
                    android:maxLength="40"
                    />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/phone_white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:mtf_cardCollapsedHeight="4dp"
                app:mtf_animationDuration="1000"
                app:mtf_openKeyboardOnFocus="true"
                android:layout_marginBottom="4dp"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_backgroundColor="@color/colorPrimary"
                >

                <EditText
                    android:id="@+id/xPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile number"
                    android:inputType="phone"
                    android:textColorHint="@color/accent"
                    android:textColor="@color/WhiteSmoke"
                    android:maxLength="11"
                    />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_image="@drawable/address_white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:mtf_cardCollapsedHeight="4dp"
                app:mtf_animationDuration="1000"
                app:mtf_openKeyboardOnFocus="true"
                android:layout_marginBottom="4dp"
                app:mtf_labelColor="@color/colorPrimary"
                app:mtf_backgroundColor="@color/colorPrimary"
                >

                <EditText
                    android:id="@+id/xAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:textColorHint="@color/accent"
                    android:textColor="@color/WhiteSmoke"
                    />
</com.github.florent37.materialtextfield.MaterialTextField>







            <Button
                android:layout_marginTop="15dp"
                android:onClick="toSaveInfo"
                android:id="@+id/xbtnsave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txtstyle"
                android:text="save"
                android:textColor="@color/WhiteSmoke"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
