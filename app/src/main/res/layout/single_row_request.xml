<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    cardview:cardCornerRadius="3dp"
    cardview:cardElevation="1dp"
    cardview:cardUseCompatPadding="true"
    android:textColor="@color/AliceBlue"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testanimation"
        android:background="@color/button_color_default"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/xml_image"
        android:layout_gravity="start|top"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo"
        app:civ_border_width="4dp"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xml_text"
        android:layout_weight="2"
        android:text="ahmed elsalamony"
        android:textSize="@dimen/cast_libraries_material_featurehighlight_center_horizontal_offset"
        android:layout_gravity="center_horizontal|top"
        android:layout_margin="16dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        />
</LinearLayout>
    </FrameLayout>
    </android.support.v7.widget.CardView>

